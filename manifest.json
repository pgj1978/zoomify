{
  "name": "Zoomify",
  "description": "Product Zoom  Extensions for website with letterbox zoom. Currently for B&Q and Screwfix",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ], 
  "web_accessible_resources": [
    {
      "resources": [ "./listeners/screwfix.js" ],
      "matches": [  ]
    } 
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.diy.com/*",
        "https://www.screwfix.com/*",
        "https://www.wickes.co.uk/*"
      ],
      "js": [
        "listeners/click-listener.js",
        "listeners/screwfix.js",
        "listeners/bnq.js",
        "listeners/wickes.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "action": {
    "default_popup": "hello.html"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}